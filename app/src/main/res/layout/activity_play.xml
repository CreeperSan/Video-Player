<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/playSeufaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/playUI"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- 底栏 -->
        <LinearLayout
            android:paddingTop="16dp"
            android:background="#99000000"
            android:id="@+id/playBottomZone"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- 进度条 -->
            <RelativeLayout
                android:id="@+id/playProgressZone"
                android:layout_width="match_parent"
                android:layout_height="46dp">
                <TextView
                    android:id="@+id/playProgressCurrent"
                    android:layout_alignParentLeft="true"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    tools:text="00:00"
                    android:layout_centerVertical="true"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/playProgressTotal"
                    android:layout_alignParentRight="true"
                    android:textColor="#ffffff"
                    tools:text="00:00"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_width="62dp"
                    android:layout_height="wrap_content" />
                <SeekBar
                    android:id="@+id/playProgressSeekBar"
                    android:layout_toRightOf="@id/playProgressCurrent"
                    android:layout_toLeftOf="@id/playProgressTotal"
                    android:layout_centerVertical="true"
                    android:progress="50"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <!-- 按钮 -->
            <LinearLayout
                android:id="@+id/playButtonZone"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="46dp">
                <ImageView
                    android:id="@+id/playButtonLock"
                    android:padding="12dp"
                    android:tint="#ffffff"
                    android:src="@drawable/ic_lock_black_24dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <ImageView
                    android:id="@+id/playButtonPrevious"
                    android:padding="6dp"
                    android:tint="#ffffff"
                    android:src="@drawable/ic_skip_previous_black_24dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <ImageView
                    android:id="@+id/playButtonPlay"
                    android:padding="6dp"
                    android:tint="#ffffff"
                    android:src="@drawable/ic_play_arrow_black_24dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <ImageView
                    android:id="@+id/playButtonNext"
                    android:padding="6dp"
                    android:tint="#ffffff"
                    android:src="@drawable/ic_skip_next_black_24dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
                <ImageView
                    android:id="@+id/playButtonFullscreen"
                    android:padding="6dp"
                    android:tint="#ffffff"
                    android:src="@drawable/ic_fullscreen_black_24dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>
        <!-- 顶栏 -->
        <android.support.v7.widget.Toolbar
            android:background="#99000000"
            android:id="@+id/playToolbar"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"/>
        <!-- 额外操作栏 -->
        <RelativeLayout
            android:id="@+id/playExtraZone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </RelativeLayout>
    </RelativeLayout>

    <!-- 常亮显示区 -->
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/playAlwaysOnZone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/playAlwaysOnProgress"
            android:alpha="0.5"
            android:background="#000000"
            android:textColor="#ffffff"
            android:text="00:02/12:56"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/playAlwaysOnInfo"
            android:alpha="0.5"
            android:background="#000000"
            android:textColor="#ffffff"
            android:text="100% 下午3:52"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <!-- 拖拽进度提示 -->
    <android.support.v7.widget.CardView
        android:visibility="gone"
        android:id="@+id/playCenterZone"
        android:layout_gravity="center"
        android:alpha="0.7"
        android:layout_margin="4dp"
        app:cardBackgroundColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="8dp"
            android:id="@+id/playCenterText"
            android:textSize="32sp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:text="00:02\n+00:01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>
    <!-- 解锁提示 -->
    <android.support.v7.widget.CardView
        android:visibility="gone"
        android:alpha="0.7"
        android:id="@+id/playUnlockZone"
        android:clickable="true"
        app:cardBackgroundColor="#333333"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:tint="#ffffff"
            android:padding="16dp"
            android:src="@drawable/ic_lock_black_24dp"
            android:layout_width="64dp"
            android:layout_height="64dp" />
    </android.support.v7.widget.CardView>

</FrameLayout>